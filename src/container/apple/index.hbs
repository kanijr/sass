<div class="page">
  {{#with header}}
  <div class="header">

    <header class="header_content">
      <div class="header__block">
        <img src="/svg/apple.svg" alt="Apple icon" class="header__icon">
        <nav class="header__block">
          {{#each links}}
          <a href="{{url}}" class="header__link">{{text}}</a>
          {{/each}}
        </nav>
      </div>
      <div class="header__block">
        <a href="#">
          <img src="/svg/search.svg" alt="Search icon" class="header__icon">
        </a>
        <a href="#">
          <img src="/svg/shop.svg" alt="Shop icon" class="header__icon">
        </a>
      </div>
    </header>

  </div>
  <div class="ad">
    {{#with ad}}
    <div class="ad__content">
      <p class="ad__title">{{title}}</p>
      <a href="{{link.url}}" class="link">{{link.text}}</a>
    </div>
    {{/with}}
  </div>
  {{/with}}

  <div class="product">
    <section class="product__top">
      {{#with iphone_pro}}
      <div class="product__card product--dark product--iphone_pro">
        <h1 class="product__title">{{title}}</h1>
        <p class="product__description">{{descriptions}}</p>
        <div class="product__action">
          {{#each link.text}}
          <a href="{{../link}}" class="link">{{this}}</a>
          {{/each}}
        </div>
      </div>

      {{/with}}

      {{#with iphone}}
      <div class="product__card product--iphone">
        <h1 class="product__title">{{title}}</h1>
        <p class="product__description">{{descriptions}}</p>
        <div class="product__action">
          {{#each link.text}}
          <a href="{{../link}}" class="link">{{this}}</a>
          {{/each}}
        </div>
      </div>
      {{/with}}

      {{#with iwatch}}
      <div class="product__card product--dark product--iwatch">
        <h1 class="product__title">{{title}}</h1>
        <p class="product__description">{{descriptions}}</p>
        <div class="product__action">
          {{#each link.text}}
          <a href="{{../link}}" class="link">{{this}}</a>
          {{/each}}
        </div>
      </div>
      {{/with}}
    </section>

    <section class="product__bottom">

      <div class="product__section">
        {{#with trade_in}}
        <div class="product__card product--small product--trade_in">
          <h1 class="product__title">{{title}}</h1>
          <p class="product__description">{{descriptions}}</p>
          <div class="product__action">
            <a href="{{link.link}}" class="link">{{link.text}}</a>
          </div>
        </div>

        {{/with}}
        {{#with conference}}
        <div class="product__card product--small product--dark product--conference">
          <h1 class="product__title">{{title}}</h1>
          <p class="product__description">{{descriptions}}</p>
          <div class="product__action">
            <a href="{{link.link}}" class="link">{{link.text}}</a>
          </div>
        </div>
        {{/with}}
      </div>
      <div class="product__section">
        {{#with ipad}}
        <div class="product__card product--small product--ipad">
          <h1 class="product__title">{{title}}</h1>
          <p class="product__description">{{descriptions}}</p>
          <div class="product__action">
            {{#each link.text}}
            <a href="{{../link}}" class="link">{{this}}</a>
            {{/each}}
          </div>
        </div>
        {{/with}}
        {{#with small_business}}
        <div class="product__card product--small product--dark product--small_business">
          <h1 class="product__title">{{title}}</h1>
          <p class="product__description">{{descriptions}}</p>
          <div class="product__action">
            <a href="{{link.link}}" class="link">{{link.text}}</a>
          </div>
        </div>
        {{/with}}
      </div>
      <div class="product__section">
        {{#with gift}}
        <div class="product__card product--small product--gift">
          <h1 class="product__title">{{title}}</h1>
          <p class="product__description">{{descriptions}}</p>
          <div class="product__action">
            <a href="{{link.link}}" class="link">{{link.text}}</a>
          </div>
        </div>
        {{/with}}
        {{#with card}}
        <div class="product__card product--small product--card">
          <h1 class="product__title">{{title}}</h1>
          <p class="product__description">{{descriptions}}</p>
          <div class="product__action">
            <a href="{{link.link}}" class="link">{{link.text}}</a>
          </div>
        </div>
        {{/with}}
      </div>
    </section>
  </div>

  <div class="footer">
    <footer class="footer__content">
      {{#each footer}}
      <div class="footer__item">
        <strong class="footer__title"> {{title}}</strong>
        <div class="footer__action">
          {{#each links}}
          <a href="{{url}}" class="link footer__link">{{text}}</a>
          {{/each}}
        </div>
      </div>
      {{/each}}
    </footer>
  </div>
</div>

